{
  "name": "zettelwirtschaft",
  "version": "1.0.0",
  "description": "Note management system based on React and Express.",
  "author": "Tobias Schmidt <tobias.schmidt@in.tum.de>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install && lerna run bootstrap --stream",
    "clean": "lerna run clean --stream && rimraf tsconfig.tsbuildinfo",
    "purge": "yarn clean && lerna run purge && rimraf node_modules yarn.lock",
    "build": "tsc --build && lerna run build --stream",
    "watch": "tsc --build --watch",
    "lint": "eslint './packages/*/src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint './packages/*/src/**/*.{ts,tsx}' --fix",
    "backend:serve": "lerna run backend:serve --stream",
    "backend:start": "lerna run backend:start --stream",
    "frontend:serve": "lerna run frontend:serve --stream",
    "electron:start": "lerna run electron:start --stream",
    "electron:serve": "lerna run electron:serve --stream",
    "mongodb:up": "docker-compose -f mongodb/docker-mongodb.yml up",
    "mongodb:down": "docker-compose -f mongodb/docker-mongodb.yml down",
    "mongoku:up": "docker-compose -f mongodb/docker-mongoku.yml up",
    "mongoku:down": "docker-compose -f mongodb/docker-mongoku.yml down"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "typescript": "^3.8.3",
    "nodemon": "^2.0.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "@hot-loader/react-dom": "^16.13.0",
    "source-map-loader": "^0.2.4",
    "css-loader": "^3.5.3",
    "style-loader": "^1.2.0",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "@typescript-eslint/parser": "^2.28.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.20"
  },
  "resolutions": {},
  "dependencies": {}
}
